# ===========================================
# HALCYON AI RECEPTIONIST - ENVIRONMENT CONFIG
# ===========================================
# Copy this file to .env and fill in your values

# Server Configuration
PORT=3000
NODE_ENV=development
LOG_LEVEL=info

# ===========================================
# TWILIO CONFIGURATION
# ===========================================
# Get these from https://console.twilio.com
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your_auth_token_here
TWILIO_PHONE_NUMBER=+1234567890

# ===========================================
# OPENAI CONFIGURATION
# ===========================================
# Get your API key from https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# OpenAI Realtime API Model
# Options: gpt-4o-realtime-preview-2024-10-01
OPENAI_REALTIME_MODEL=gpt-4o-realtime-preview-2024-10-01

# Voice options: alloy, echo, shimmer
OPENAI_VOICE=alloy

# ===========================================
# FIRM CONFIGURATION
# ===========================================
FIRM_NAME=Your Law Firm Name
FIRM_PHONE=+1234567890
FIRM_WEBSITE=https://yourfirm.com

# Callback timeframes (in hours)
CALLBACK_HIGH_PRIORITY=24
CALLBACK_MEDIUM_PRIORITY=48
CALLBACK_LOW_PRIORITY=120

# ===========================================
# WEBHOOK URLS (for production)
# ===========================================
# Your public URL where Twilio can reach this server
# Use ngrok for local development: ngrok http 3000
PUBLIC_URL=https://your-domain.com

# ===========================================
# DATABASE (Optional - for persistence)
# ===========================================
# DATABASE_URL=postgresql://user:password@localhost:5432/halcyon_intake

# ===========================================
# SMS CONFIGURATION
# ===========================================
ENABLE_SMS_FOLLOWUP=true
SMS_CONFIRMATION_DELAY_SECONDS=30

# ===========================================
# LOGGING & MONITORING
# ===========================================
ENABLE_CALL_RECORDING=true
ENABLE_TRANSCRIPTION=true
SAVE_RECORDINGS_PATH=./recordings

# ===========================================
# SCORING THRESHOLDS
# ===========================================
SCORE_HIGHLY_RECOMMENDED=70
SCORE_RECOMMENDED=45
SCORE_CONSIDER_CAUTION=25
SCORE_WEAK_CASE=10

# ===========================================
# SKINNY APP INTEGRATION
# ===========================================
# Enable to send voice intakes to Skinny App for unified scoring and storage
# This provides CMS integrations, billing, and centralized data management
SKINNY_APP_ENABLED=false
SKINNY_APP_URL=http://localhost:3000
SKINNY_APP_API_KEY=hky_live_your_api_key_here
SKINNY_APP_TIMEOUT=30000
# If true, falls back to local scoring when Skinny App is unavailable
SKINNY_APP_FALLBACK=true

{
  "name": "halcyon-ai-receptionist",
  "version": "1.0.0",
  "type": "module",
  "description": "AI-powered phone receptionist for SSD legal intake using Twilio and OpenAI Realtime API",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "prisma generate && tsc",
    "start": "node dist/server.js",
    "start:prod": "NODE_ENV=production node dist/server.js",
    "tunnel": "ngrok http 3000",
    "test": "vitest",
    "lint": "eslint src/**/*.ts",
    "typecheck": "tsc --noEmit",
    "db:generate": "npx prisma generate",
    "db:push": "npx prisma db push",
    "db:migrate": "npx prisma migrate dev",
    "db:studio": "npx prisma studio"
  },
  "dependencies": {
    "@fastify/cors": "^9.0.1",
    "@fastify/formbody": "^7.4.0",
    "@fastify/static": "^7.0.4",
    "@fastify/websocket": "^10.0.1",
    "@prisma/client": "^5.20.0",
    "@sendgrid/mail": "^8.1.6",
    "dotenv": "^16.4.5",
    "fastify": "^4.28.1",
    "openai": "^4.67.0",
    "pino": "^9.4.0",
    "pino-pretty": "^11.2.2",
    "twilio": "^5.3.0",
    "uuid": "^10.0.0",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@types/node": "^22.7.4",
    "@types/uuid": "^10.0.0",
    "@types/ws": "^8.5.12",
    "@typescript-eslint/eslint-plugin": "^8.7.0",
    "@typescript-eslint/parser": "^8.7.0",
    "eslint": "^9.11.1",
    "prisma": "^5.20.0",
    "tsx": "^4.19.1",
    "typescript": "^5.6.2",
    "vitest": "^2.1.1"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "keywords": [
    "twilio",
    "openai",
    "realtime-api",
    "voice-ai",
    "legal-intake",
    "ssd",
    "disability"
  ],
  "author": "Halcyon Legal Tech",
  "license": "PROPRIETARY"
}
